{
  "compilerOptions": {
    // JavaScript version output (ES6+ for modern browsers)
    "target": "es6",
    // Specify the module system
    "module": "esnext",
    // Allow synthetic imports (important for Next.js)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Base directory for non-relative module imports
    "baseUrl": "./",
    // Path alias configuration
    "paths": {
      "@/*": ["./*"]
    },
    // Skip type checking in declaration files
    "skipLibCheck": true,
    // Enable strict type-checking options
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    // Allow compiling JavaScript files
    "allowJs": true,
    // Prevent emitting compiled files
    "noEmit": true,
    // Use Node.js module resolution
    "moduleResolution": "node",
    // Enable incremental builds for faster compilation
    "incremental": true,
    // Enable isolated module compilation for Next.js
    "isolatedModules": true,
    // JSX settings for Next.js
    "jsx": "preserve",
    // Include necessary TypeScript libraries
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Automatically generated by Next.js
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules" // Exclude dependencies
  ],
  "ts-node": {
    "files": true // Enable ts-node to process TypeScript files
  }
}
